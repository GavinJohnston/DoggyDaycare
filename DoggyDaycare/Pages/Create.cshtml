@page
@model DoggyDaycare.Pages.CreateModel
@{
}

<h1>Create Appointment</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Daycare.Owner" class="control-label"></label>
                <input type="text" asp-for="Daycare.Owner" class="form-control" />
                <span asp-validation-for="Daycare.Owner" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Daycare.Name" class="control-label"></label>
                <input type="text" asp-for="Daycare.Name" class="form-control" />
                <span asp-validation-for="Daycare.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Daycare.Date" class="control-label"></label>
                <input asp-for="Daycare.Date" class="form-control" />
                <span asp-validation-for="Daycare.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Daycare.Duration" class="control-label">Duration (hrs)</label>
                <input asp-for="Daycare.Duration" class="form-control" />
                <span asp-validation-for="Daycare.Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-page="Index">Return</a>
</div>