@page
@model DoggyDaycare.Pages.DeleteModel
@{
}

<h1>Delete Record</h1>
<hr />
<h2>You are about to delete the following appointment</h2>
<form method="post">
    <a button type="button" class="btn btn-info" asp-page="Index" asp-route-id="">Return</a>
    <input type="hidden" asp-for="DaycareRecord.Id" />
    <input type="submit" value="Delete" class="btn btn-danger" /><br />
    <a asp-page="Index">Back to List</a>
</form>
<table id="records" class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Owner
            </th>
            <th>
                Pet Name
            </th>
            <th>
                Date / Time
            </th>
            <th>
                Duration (hrs)
            </th>
        </tr>
    </thead>
    <tbody>
            <tr class="list-row">
                <td>@Html.DisplayFor(modelItem => modelItem.DaycareRecord.Id)</td>
                <td>@Html.DisplayFor(modelItem => modelItem.DaycareRecord.Owner)</td>
                <td>@Html.DisplayFor(modelItem => modelItem.DaycareRecord.Name)</td>
                <td>@Html.DisplayFor(modelItem => modelItem.DaycareRecord.Date)</td>
                <td>@Html.DisplayFor(modelItem => modelItem.DaycareRecord.Duration)</td>
            </tr>
    </tbody>
</table>
   
